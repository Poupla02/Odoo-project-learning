        <field name="name">menu.form</field>
        <field name="model">gest_commande.menu</field>
        <field name="arch" type="xml">
            <form string="Enregistrer un menu">
                <header>
                </header>
                <sheet>
                    <group>
                       <group name="name" string="">
                           <field name="nom_plat"/>
